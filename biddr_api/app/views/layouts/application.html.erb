<!DOCTYPE html>
<html>
  <head>
    <title>BiddrApi</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all' %>
    <%= javascript_pack_tag 'application' %>
  </head>

  <body>
    <div class="navbar-div">

     <a href="http://www.localhost:3000/" class="logo"><%= image_tag('biddr.jpg', width: '100px' , height: '40px') %></a>

      <div class="home-auctions-div">
        <span style="margin-right: 20px;">
        <%= link_to "Home", root_path, :class => "btn btn-dark" %>
      </span>
          <%= link_to "Auctions" , auctions_path, :class => "btn btn-dark" %>
      </div>

    <% if user_signed_in? %>
    <div style="margin: 7px 3px 0px 0px;">
      Hello <%= current_user.first_name %>,
    </div>
        <%= link_to "Logout" , sessions_path,  method: :delete, data: {confirm: "are you sure you want to log out?" }, :class => "btn btn-dark"%>
          <% else %>
          <div style="margin-right: 20px;">
            <%= link_to "Login" , new_sessions_path, :class => "btn btn-dark" %>
          </div>
              <%= link_to "Sign Up" , new_user_path, :class => "btn btn-dark" %>
                <% end %>
              </div>
                  

    <%= yield %>
  </body>
</html>
